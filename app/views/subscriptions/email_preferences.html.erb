<% form_for @user do |f| %>
  <div>
    <h3>Step 1. Tell us what type of message you would like to receive.</h3>
    <p>
    <% @mailing_lists.each do |ml| %> 
      <%= check_box_tag "user[mailing_list][#{ml.id}]", true, current_user.mailing_lists.include?(ml), {:id => "subscriptions_#{ml.id}"} %>
      <%= label_tag "subscriptions_#{ml.id}", t(ml.form_text, :default => ml.form_text) %>
      <br />
    <% end %>
    </p>
  </div>  
  <div>
    <h3>Step 2. Let us help you celebrate your birthday with great savings!</h3>
    <p>
      <%= f.label :gender, "Gender:" %>
      <%= f.select :gender,
        [
          ["Please select a gender...", ''],        
          ["Male", 1],
          ["Female", 2],
          ["Prefer not to disclose", 3]
        ] %>
       <br /> 
      <%= f.label :birthday, "Birthday:" %> 
      <%= date_select :user, :birthday, 
            :discard_year => true, :include_blank => true %>
    </p>  
  </div>  
  <div>
    <h3>Step 3. Email Format Preference. (if you've selected any emails from Step 1)</h3>
    <p>
      <%= f.radio_button :prefer_plain_text, false %> 
      <%= label_tag "user_prefer_plain_text_false", "Send me HTML messages (includes graphic images as well as text)" %>
  	  <br />
      <%= f.radio_button :prefer_plain_text, true %>
      <%= label_tag "user_prefer_plain_text_true", "Send me Text-only emails" %>      
    </p>  
  </div>
  
  <%= f.submit t(:continue) %>
<% end %>

