<% MailingList.all.each do |ml| %> 
  <div>
    <%= check_box_tag "user[mailing_list][#{ml.id}]", true, (@user.new_record? ? true : @user.mailing_lists.include?(ml)) %>
    <label for="user_mailing_list_<%=ml.id%>"> <%= t(ml.form_text, :default => ml.form_text) %> </label>
    <input type="hidden" name="user[mailing_list][0]" value="true" />
  </div>
<% end %>  
